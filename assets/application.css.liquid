@import url('https://fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap');
@font-face {
    font-family: 'YoungSerif'
    src: url('/assets/YoungSerif-Regular.woff2') format("woff2"),
         url('/assets/YoungSerif-Regular.woff') format("woff"),
}

:root {
    --headline-font: 'YoungSerif', 'Times New Roman', Times, serif;
    --text-font: 'Karla', Arial, Helvetica, sans-serif;
    
    --black: #000000;
    --white: #FFFFFF;
    
    --light-black: #333333;
    
    --text-color: #555555;
    --text-color-white: #CCCCCC;
    --text-color-light: #707070;
    --text-color-light-white: #AAAAAA;
    
    --gold: #BEA482;
    
    --background-color: #F7F2EA;
    --header-background-color: #EEE6DD;
    --footer-background-color: #F4EDE6;
    --border-color: rgba(0,0,0,0.15);
    --border-color-white: rgba(255,255,255,0.15);
    
    --standard-border: 1px solid var(--border-color);
    --standard-border-white: 1px solid var(--border-color-white);
    
    --line-global: 20px;
    --gutter-global: var(--line-global);
    --offset-global: calc(var(--line-global)*2); // 40px;
    
    --header-height: calc(var(--line-global)*4); // 80px;
    
    --type-headline-lg: 50px;
    --type-headline-med: 30px;
    --type-body-med: 15px;
    --type-body-sm: 13px;
    
    --type-bold: 700;
    --type-book: 400;
}

* {
    font-family: var(--text-font);
    box-sizing: border-box;
}

html, body {
    width: 100%;
    margin: 0;
    padding: 0;
    color: var(--black);
    line-height: var(--line-global);
}

body {
    font-size: var(--type-body-med);
    background-color: var(--background-color);
    background-image: url('{{"background.jpg" | asset_url }}');
    background-size: 100%;
    background-attachment: fixed;
    background-repeat: no-repeat;
    padding-top: calc(var(--header-height) + var(--offset-global));
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
    margin: 0;
    padding: 0;
    font-weight: var(--type-book);
}

a {
    text-decoration: none;
    color: var(--text-color);
}

a:hover :not(img) {
    opacity: 0.75;
}

p {
    color: var(--text-color);
}

p a {
    border-bottom: var(--standard-border);
}

p a:hover {
    border-bottom-color: var(--black);
}

ol, ul {
    list-style-type: none;
}

h1, .h1, h2, .h2, h3, .h3 {
    font-family: var(--headline-font);
    font-weight: var(--type-bold);
    color: var(--light-black);
}

h1, .h1 {
    font-size: var(--type-headline-lg);
    line-height: calc(var(--line-global)*3);
}

h2, .h2 {
    font-size: var(--type-headline-med);
    line-height: calc(var(--line-global)*2);
}

h2, .h2 {
    font-size: var(--type-body-med);
    line-height: (--line-global);
}

h4, .h4 {
    color: var(--light-black);
    font-size: var(--type-body-small);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
}

.accent-color {
    color: var(--text-color-white);
}

.text-link {
    color: var(--black);
    font-size: var(--type-body-small);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
}

button[type="submit"], .button {
    display: inline-block;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
    width: 100%;
    padding: var(--line-global);
    text-align: center;
    line-height: var(--line-global);
    text-size: var(--type-body-med);
    background: var(--gold);
    color: var(--white);
}

button[type="submit"]:disabled, .button:disabled {
    opacity: 0.75;
    cursor: not-allowed;
    text-decoration: line-through
}
button[type="submit"]:not(:disabled):hover {
    filter: brightness(0.9);
}

.visually-hidden {
    position: absolute !important;
    height: 1px; width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
    clip: rect(1px 1px 1px 1px 1px);
}

.wrapper {
    padding-left: var(--offset-global);
    padding-right: var(--offset-global);
}

.grid {
    display: grid;
    column-gap: var(--gutter-global);
    row-gap: var(--gutter-global);
}

.grid > * {
    min-width: 0;
    min-height: 0;
}

.grid.collapse {
    column-gap: 0;
    row-gap: 0;
}

.two-columns {
    grid-template-columns: 1fr 1fr;
}

.valign-center {
    display: flex;
    flex-direction: column;
    /*justify-content: center;*/
}

.valign-center > *:first-child {
    margin-top: auto;
}

.valign-center > *:last-child {
    margin-bottom: auto;
}

.ta-center {
    text-align: center;
}

.text-white {
    color: var(--white);
}

.text-white p {
    color: var(--text-color-white);
}

.header-global {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: var(--header-background-color);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: var(--line-global) var(--offset-global);
    z-index: 10;
}

.header-global .logo img {
    display: block;
}

.header-global .shop-link {
    order: -1;
}

.header-global .cart-close-text {
    display: none;
}

.footer-global {
    background-color: var(--footer-background-color);
    margin-top: var(--offset-global);
    border-top: var(--standard-border);
}

.footer-global h4 {
    margin-bottom: var(--line-global);
}

.footer-top, .footer-bottom {
    padding: var(--offset-global);
}

.footer-bottom {
    border-top: var(--standard-border);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.social-links a {
    display: inline-block;
}

.social-links a:not(:last-child) {
    margin-right: calc(var(--line-global)/2);
}

.footer-top {
    grid-template-columns: 2fr 1fr 1fr;
}

.index-top {
    height: 50vh;
    min-height: 400px;
    padding-bottom: var(--offset-global);
}

.product-info-section {
   background-color: var(--light-black);
   padding: var(--offset-global);
   display: flex;
   flex-direction: column;
   text-align: center;
}

.product-title {
    padding: var(--line-global) 0;
    margin-top: auto;
    margin-bottom: auto;
}

.price {
    display: inline-block;
    font-size: var(--line-global);
    color: var(--text-color-white);
    font-weight: var(--type-book);
    vertical-align: super;
}

.below-title {
    max-width: 396px;
    margin: 0 auto;
}

.product-description {
    margin-bottom: var(--line-global);
}

.product-card .card-image a {
    display: block;
    width: 100%;
    height: 100%;
}

.product-card .card-image img {
    display: block;
    width: 100%;
    height: auto;
}

.product-card:nth-child(odd) .card-image {
    grid-column: 0; 
    grid-row: 1;
}

.product-image {
    width: 100%;
}

.product-image img {
    display: block;
    max-width: 100%;
    height: auto;
}

#add-to-cart-button {
    margin-top: var(--line-global);
}

.option-row {
    text-align: left;
    padding: var(--line-global) 0;
    border-top: var(--standard-border-white);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.option-row:last-of-type {
    border-bottom: var(--standard-border-white);
}

.option-title {
    color: var(--text-color-white);
}

.variant-radio + label {
    font-size: var(--type-body-small);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
    display: inline-block;
    cursor: pointer;
    padding: calc(var(--line-global)/5);
    border: 1px solid transparent;
    color: var(--text-color-light-white);
}

.variant-radio:checked + label {
    color: var(--white);
    border: 1px solid var(--white);
}

.variant-radio:disabled + label {
    cursor: not-allowed;
    text-decoration: line-through;
    color: var(--text-color);
}

.quantity-button {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
    font-size: var(--line-global);
    line-height: var(--line-global);
    text-align: center;
    font-weight: var(--type-bold);
    color: var(--text-color-white);
    width: var(--line-global);
}

.quantity-button:disabled {
    opacity: 0.5;
}

.quantity-button:not(:disabled):hover {
    color: var(--white);
}

.quantity-text {
    display: inline-block;
    text-align: center;
    min-width: var(--line-global);
    margin: 0 calc(var(--line-global)/2);
}

.cart-page-contents {
    background: var(--light-black);
    padding: var(--offset-global);
    max-width: 380px;
    margin: 0 auto;
}

.line-item, .subtotal-line {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.line-item:not(:first-child) {
    margin-top: var(--line-global);
}

.line-item p {
    color: var(--text-color-white);
}

.line-item .line-image {
    width: 80px;
    position: relative;
}

#line-image {
    display: block;
    width: 100%;
    height: auto;
}

.remove-line {
    position: absolute;
    width: var(--line-global);
    height: var(--line-global);
    top: calc(var(--line-global)/-2);
    right: calc(var(--line-global)/-2);
    display: none;
}

.line-item:hover .remove-line {
    display: block;
}

.subtotal-line, .cart-lines {
    padding: var(--line-global) 0;
}

.cart-lines {
    margin-top: var(--line-global);
    border-top: var(--standard-border-white);
    border-bottom: var(--standard-border-white);
}

.cart-empty-text {
    margin: calc(var(--line-global)*4) 0;
}

#mini-cart {
    position: fixed;
    top: var(--header-height);
    bottom: 0;
    right: 0;
    width: 100%;
    max-width: 380px;
    background: var(--light-black);
    transform: translateX(100%);
    transition: transform 0.5s ease;
}

.mini-cart-contents {
    overflow: auto;
    padding: var(--offset-global);
    height: 100%;
}

html.mini-cart-open {
    overflow: hidden;
}

.mini-cart-open #mini-cart {
    transform: translateX(0);
}

.mini-cart-open .cart-link .cart-text {
    display: none;
    //transition: display 1s ease;
}

.mini-cart-open .cart-link .cart-close-text {
    display: inline-block;
}

.mini-cart-open main {
    opacity: 0.3;
    //transition: opacity 1s ease;
    pointer-events: none;
}